<html>
  <head>
    <title>TinaCMS Admin</title>
    <script type="module" is:inline>
      import { TinaCMS } from "tinacms";
      import tinaConfig from "../../../tina/config";

      window.addEventListener("DOMContentLoaded", () => {
        const cms = new TinaCMS(tinaConfig);
        cms.open();
      });
    </script>
  </head>
  <body>
    <h1>Welcome to TinaCMS Admin</h1>
    <p>If the admin interface doesn't load, check your browser console for errors.</p>
  </body>
</html>
